@model IEnumerable<QuanLyBenhVienNoiTru.Models.Entities.HinhThucDieuTri>

@{
    ViewBag.Title = "Danh sách hình thức điều trị";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Danh sách hình thức điều trị</h2>

<p>
    @Html.ActionLink("Thêm hình thức điều trị mới", "Create", null, new { @class = "btn btn-primary" })
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Mã điều trị</th>
                <th>Tên hình thức điều trị</th>
                <th>Chi phí (VNĐ)</th>
                <th>Mô tả</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.MaDieuTri)</td>
                    <td>@Html.DisplayFor(modelItem => item.TenDieuTri)</td>
                    <td>@String.Format("{0:N0}", item.ChiPhi)</td>
                    <td>@Html.DisplayFor(modelItem => item.MoTa)</td>
                    <td>
                        @Html.ActionLink("Chi tiết", "Details", new { id=item.MaDieuTri }, new { @class = "btn btn-info btn-sm" }) |
                        @Html.ActionLink("Sửa", "Edit", new { id=item.MaDieuTri }, new { @class = "btn btn-warning btn-sm" }) |
                        @Html.ActionLink("Xóa", "Delete", new { id=item.MaDieuTri }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>