@model IEnumerable<QuanLyBenhVienNoiTru.Models.Khoa>

@{
    ViewBag.Title = "Danh sách khoa";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Danh sách các khoa</h2>

<p>
    @Html.ActionLink("Thêm khoa mới", "Create", null, new { @class = "btn btn-primary" })
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Mã khoa</th>
                <th>Tên khoa</th>
                <th>Mô tả</th>
                <th>Số bệnh nhân hiện tại</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.MaKhoa)</td>
                    <td>@Html.DisplayFor(modelItem => item.TenKhoa)</td>
                    <td>@Html.DisplayFor(modelItem => item.MoTa)</td>
                    <td>@ViewBag.SoBenhNhan[item.MaKhoa]</td>
                    <td>
                        @Html.ActionLink("Chi tiết", "Details", new { id=item.MaKhoa }, new { @class = "btn btn-info btn-sm" }) |
                        @Html.ActionLink("Sửa", "Edit", new { id=item.MaKhoa }, new { @class = "btn btn-warning btn-sm" }) |
                        @Html.ActionLink("Xóa", "Delete", new { id=item.MaKhoa }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>