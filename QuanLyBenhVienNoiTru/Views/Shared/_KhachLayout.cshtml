<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Đăng Ký Thăm Bệnh - Quản Lý Bệnh Viện Nội Trú</title>
    @Styles.Render("~/Content/css") <!-- Đảm bảo rằng bạn đã định nghĩa bundle này trong BundleConfig -->
    @Scripts.Render("~/bundles/modernizr") <!-- Đảm bảo rằng bạn đã định nghĩa bundle này trong BundleConfig -->
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Đăng Ký Thăm Bệnh", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                    <li>@Html.ActionLink("Đăng ký thăm bệnh", "DangKyTham", "LichThamBenh")</li>
                    <li>@Html.ActionLink("Lịch sử đăng ký", "LichSu", "LichThamBenh")</li>
                    <li>@Html.ActionLink("Thông tin cá nhân", "ThongTin", "KhachThamBenh")</li>
                </ul>
                @Html.Partial("_LoginPartial") <!-- Đảm bảo rằng bạn đã định nghĩa partial view này -->
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody() <!-- Nơi nội dung của các view con sẽ được hiển thị -->
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Quản Lý Bệnh Viện Nội Trú</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery") <!-- Đảm bảo rằng bạn đã định nghĩa bundle này trong BundleConfig -->
    @Scripts.Render("~/bundles/bootstrap") <!-- Đảm bảo rằng bạn đã định nghĩa bundle này trong BundleConfig -->
    @RenderSection("scripts", required: false) <!-- Đảm bảo rằng bạn sử dụng đúng tên section -->
</body>
</html>